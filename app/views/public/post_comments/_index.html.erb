<% post.post_comments.each do |post_comment| %>
  <div>
    <%= post_comment.created_at.strftime('%Y/%m/%d') %>
    <h5>
      <%= link_to user_path(post_comment.user) do %>
        <%= post_comment.user.name %>
      <% end %>
    </h5>
  </div>
  <div class="comment text-break border-bottom border-dark">
    <%= post_comment.comment %>
    <% if post_comment.user == current_user %>
      <%= link_to "削除する", post_post_comment_path(post_comment.post,post_comment), method: :delete,class:'btn btn-sm btn-danger', data: { confirm: "【確認】コメントを削除しますか？" }, remote: true %>
    <% end %>
  </div>
<% end %>