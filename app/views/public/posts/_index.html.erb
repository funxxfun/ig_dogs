<div class="row justify-content-start">
  <% posts.each do |post| %>
  <div class="col-12 col-md-6 col-lg-3">
    <div class="card-deck p-3">
      <div class="card content-card border-dark">
        <div class="card-header p-0">
          <div class="card-img-top">
            <%= link_to post_path(post.id) do %>
              <%= attachment_image_tag post, :image, fallback:'no_image.png' %>
            <% end %>
          </div>
        </div>
        <div class="card-body">
          <div class="title_box">
            <h5 class="card-title">
              <%= link_to post_path(post.id), class:'text-reset' do %>
                <%= post.title %>
              <% end %>
            </h5>
          </div>
          <p>
            <%=link_to user_path(post.user), class:'btn btn-secondary' do %>
              <i class="fas fa-user-circle"></i>
              <%= post.user.name %>
            <% end %>
          </p>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>