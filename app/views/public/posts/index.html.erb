<div class="texts-wrapper">
  <div class="contents-title text-center">
    <h2>投稿一覧</h2>
  </div>
  <div class="row">
    <% @posts.each do |post| %>
    <div class="col-12 md-6 lg-4">
      <div class="card-deck" style="width:18rem">
        <div class="card">
          <div class="card-img-top">
            <%= link_to post_path(post.id) do %>
              <%= attachment_image_tag post, :image, fallback:'no_image.png' ,size:"60x60" %>
            <% end %>
          </div>
          <div class="card-body">
            <div class="title_box d-flex">
              <h5 class="card-title">
                <%= post.title %>
              </h5>
              <div id="favorites_buttons_<%= post.id %>">
                <%= render 'public/favorites/favorite', post: post %>
              </div>
            </div>
            <h6 class="card-text">
              <%= post.body %>
            </h6>
              <p>
                <%= post.user.name %>
              </p>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>