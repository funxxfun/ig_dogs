<div class="container">
<div class="texts-wrapper">
  <div class="row subtitle_box">
  <div class="col-3"></div>
  <div class="col-6">
    <h1 class="subtitle text-center">投稿一覧</h1>
  </div>
  <div class="col-3 search-form pt-3">
      <%= form_tag(search_path, method: :get) do %>
        <%= text_field_tag 'content' %></br>
        <%= select_tag 'model', options_for_select({ "User" => "user", "Post" => "post" }) %>
        <%= select_tag 'method', options_for_select({ "完全一致" => "perfect", "部分一致" => "partial", "前方一致" => "forward_match", "後方一致" => "backward_match" }) %>
        <%= submit_tag '検索' %>
      <% end %>
      <div>
        <%= link_to "人気投稿を見る", search_favorite_path, class:'btn btn-primary' %>
      </div>
  </div>
  </div>
  <%= render 'index', posts: @posts%>
  <div class="row">
    <div class="col-5">
    </div>
    <div class="col-2">
       <%= paginate @posts %>
    </div>
    <div class="col-5"></div>
  </div>
</div>
</div>
