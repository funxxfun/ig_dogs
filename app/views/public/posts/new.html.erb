<div class="container">
  <h1>新規投稿</h1>
  <div class="row">
    <div class="col">
      <%= form_with model:@post ,local:true do |f| %>
      <div class="image_form">
        <h4>画像</h4>
        <%= f.attachment_field :image %>
      </div>
      <div class="title_form">
        <h4>タイトル</h4>
        <%= f.text_field :title %>
      </div>
      <div class="body_form">
        <h4>投稿内容</h4>
        <%= f.text_area :body %>
      </div>
        <%= f.submit '投稿' %>
      <% end %>
    </div>
  </div>
</div>