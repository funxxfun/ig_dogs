<div class="container">
  <h2 class="subtitle text-center">フォローユーザ一覧</h2>
  <% if @users.exists? %>
    <div class="row">
      <% @users.each do |user| %>
        <div class="col-6">
          <div class="border-bottom border-3 pt-3 pb-3">
            <%= link_to user_path(user) do %>
              <%= attachment_image_tag user, :profile_image, :fill,100,100, fallback: "no_image.png", size: "50x50", class: "rounded-circle" %>
            <% end %>
            <%= link_to user.name, user_path(user) %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-center">ユーザーがいません</p>
  <% end %>
</div>