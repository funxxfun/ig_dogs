<!DOCTYPE html>
<html>
  <head>
    <title>AnimalBlog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="bg-light shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
          <h1>animal_blog</h1>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-expanded="false" aria-controls="navbarNabDropdown" aria-labrl="Toggle nabigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li class="nav-item">
                  <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
                </li>
                <li class="nav-item">
                  通知
                </li>
              <% elsif admin_signed_in? %>
                <li class="nav-item">
                  <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
                </li>
              <% else %>
                  <li class="nav-item">
                  <%= link_to "新規登録", new_user_registration_path %>
                </li>
                <li class="nav-item">
                  <%= link_to "ログイン", new_user_session_path %>
                </li>
                <li class="nav-item">
                  <%= link_to "管理者ログイン", new_admin_session_path %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
